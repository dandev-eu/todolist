<%- include("header") %>

<div class="container col-md-8 col-11">
    <h1>Today is <%= today %>.</h1>
    <h2>List of your tasks.</h2>
    <h5><a href="/clear">Clear all list</a></h5>
    <form action="/" method="POST" class="form">
        <div class="form-row">
            <div class="form-group col-md-5 col-10 offset-md-4">
                <input type="text" name="task" id="task" placeholder="add a new task" class="form-control" required autocomplete="off"> 
            </div>
            <div class="form-group col-md-1 col-1">
                <input type="submit" value="+" class="btn btn-plus">
            </div>
        </div>
    </form>
    <table class="table">
        <% tasks.forEach( (task)=> {%>
            <tr>
                <td><%= task %></td>
                <td><input type="button" value="complete" class="btn btn-danger completeBtn"></td>
            </tr>
            <% }) %>

    </table>
</div>

<%- include("footer") %>